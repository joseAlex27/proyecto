<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vista_fila"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="30dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/tv_nombre"
            android:layout_width="102dp"
            android:layout_height="18dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="164dp"
            android:layout_marginBottom="1dp"
            android:text="TextView"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toTopOf="@+id/tv_primerApell"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imagen"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="131dp"
            android:layout_height="142dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.482"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_primerApell"
            android:layout_width="157dp"
            android:layout_height="18dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="164dp"
            android:layout_marginBottom="5dp"
            android:text="TextView"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toTopOf="@+id/tv_segundoApell"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imagen"
            app:layout_constraintTop_toBottomOf="@+id/tv_nombre" />

        <TextView
            android:id="@+id/tv_segundoApell"
            android:layout_width="115dp"
            android:layout_height="19dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="164dp"
            android:layout_marginBottom="5dp"
            android:text="TextView"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toTopOf="@+id/tv_telefono"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.017"
            app:layout_constraintStart_toEndOf="@+id/imagen"
            app:layout_constraintTop_toBottomOf="@+id/tv_primerApell" />

        <TextView
            android:id="@+id/tv_telefono"
            android:layout_width="118dp"
            android:layout_height="19dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="164dp"
            android:layout_marginBottom="7dp"
            android:text="TextView"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toTopOf="@+id/tv_direccion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.014"
            app:layout_constraintStart_toEndOf="@+id/imagen"
            app:layout_constraintTop_toBottomOf="@+id/tv_segundoApell" />

        <TextView
            android:id="@+id/tv_direccion"
            android:layout_width="116dp"
            android:layout_height="17dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="164dp"
            android:layout_marginBottom="40dp"
            android:text="TextView"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imagen"
            app:layout_constraintTop_toBottomOf="@+id/tv_telefono"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>